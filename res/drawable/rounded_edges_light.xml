<?xml version="1.0" encoding="utf-8"?>
<!--
	Defines a shape with rounded edges.

	I use it to make the groups look better.

	From:
		http://androidforums.com/developer-101/194627-creating-text-boxes-rounded-edges.html
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

	<solid android:color="@color/very_light_warm_gray" />

	<corners
		android:radius="4dp"
		/>

	<padding
		android:bottom="0dp"
		android:left="0dp"
		android:right="0dp"
		android:top="0dp" />


</shape>